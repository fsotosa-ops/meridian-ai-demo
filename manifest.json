{
    "manifest_version": 3,
    "name": "MeridIAn - Sales Intelligence",
    "version": "2.1.0",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
      "https://*.linkedin.com/*",
      "https://generativelanguage.googleapis.com/*"
    ],
    "background": { "service_worker": "background.js" },
    "content_scripts": [{
        "matches": ["https://*.linkedin.com/*"],
        "js": ["content.js"],
        "css": ["widget.css"]
    }],
    "web_accessible_resources": [{
      "resources": ["icon48.png", "icon16.png", "icon128.png"],
      "matches": ["https://*.linkedin.com/*"]
    }],
    "action": { "default_popup": "popup.html" },
    "icons": { "48": "icon48.png" }
}